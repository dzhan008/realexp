<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="realexp.realexp.Location"
    android:id="@+id/layoutMain">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Location"
        android:id="@+id/btnLocation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="btnLocation_Click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Longitude:"
        android:id="@+id/txtLongitudeS"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"
        android:textSize="18sp"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Latitude:"
        android:id="@+id/txtLatitudeS"
        android:textColor="#010101"
        android:textSize="18sp"
        android:padding="5dp"
        android:singleLine="true"
        android:layout_below="@+id/txtLongitudeS"
        android:layout_alignEnd="@+id/txtLongitudeS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="N/A"
        android:id="@+id/txtLongitude"
        android:textColor="#010101"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_alignBottom="@+id/txtLongitudeS"
        android:layout_toEndOf="@+id/txtLongitudeS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="N/A"
        android:id="@+id/txtLatiude"
        android:textColor="#010101"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_alignTop="@+id/txtLatitudeS"
        android:layout_toEndOf="@+id/txtLatitudeS" />
</RelativeLayout>
